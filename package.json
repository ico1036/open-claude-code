{
  "name": "open-claude-code",
  "version": "0.1.0",
  "private": true,
  "description": "Multi-channel messaging plugin for Claude Code",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "start": "node packages/gateway/dist/gateway-daemon.js",
    "daemon": "node packages/gateway/dist/gateway-daemon.js &",
    "daemon:install": "bash scripts/install-daemon.sh install",
    "daemon:uninstall": "bash scripts/install-daemon.sh uninstall",
    "setup": "pnpm install && pnpm build",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "tsc --noEmit",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0",
    "@vitest/coverage-v8": "^3.0.0",
    "tsup": "^8.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "protobufjs"
    ]
  }
}
